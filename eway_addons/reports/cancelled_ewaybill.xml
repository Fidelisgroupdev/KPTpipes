<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="report_nano_cancelled_ewaybill_document">
            <t t-call="web.basic_layout">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                  <h1 style="font-family: serif; text-align:center; font-size: 40px; font-weight: bold; color: #303b70; margin: 0;">
                    E-Way Bill Cancelled
                </h1>
                <table width="100%"
                       style="text-align: left; border-collapse: collapse; border: 1px solid #EEEEEE; margin: 0; border-radius: 5px;">
                    <tr>
                        <td style="border: none; padding: 10px;">
                            <table width="100%"
                                   style="text-align: left; border-collapse: collapse; border: 1px solid #FFFFFF; margin: 0;">
                                <thead>
                                    <tr>
                                        <th width="80%">
                                            <span style="font-size: 20px; font-weight: bold;">
                                                e-Way Bill
                                            </span>
                                        </th>
                                        <th width="20%"
                                            style="text-align: right; border-collapse: collapse; border: 1px solid #FFFFFF; margin: 0;">
                                            <img t-attf-src="data:image/*;base64,{{doc.qr_code}}"
                                                 style="height:150px; width:150px;"/>
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                            <!--                            1.e-way bill Details-->
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <tr>
                                    <td width="100%">
                                        <br></br>
                                        <strong style="font-size: 16px;">1. E-WAY BILL Details</strong>
                                        <br></br>
                                    </td>
                                </tr>
                            </table>
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <tr>
                                    <td width="40%">
                                        <br></br>
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            eWay Bill No:
                                        </span>
                                        <span t-field="doc.eway_no"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                        <br></br>
                                    </td>
                                    <td width="30%">
                                        <br></br>
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            Generated Date:
                                        </span>
                                        <span t-field="doc.eway_date"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                        <br></br>
                                    </td>
                                    <td width="30%">
                                        <br></br>
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            Generated By:
                                        </span>
                                        <span t-field="doc.company_id.vat"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                        <br></br>
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            Valid Upto:
                                        </span>
                                        <span t-field="doc.valid_upto"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                    </td>
                                </tr>
                            </table>
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <tr>
                                    <td width="50%">
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            Mode:
                                        </span>
                                        <span t-field="doc.transport_mode"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                    </td>
                                    <td width="50%">
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            Approx Distance:
                                        </span>
                                        <span t-field="doc.l10n_in_distance"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                    </td>
                                    <br></br>
                                </tr>
                            </table>
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <tr>
                                    <td width="25%">
                                        <br></br>
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            Type:
                                        </span>
                                        <span t-field="doc.supply_type"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                        <span>
                                            -
                                        </span>
                                        <span t-field="doc.sub_type"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                    </td>
                                    <td width="45%">
                                        <br></br>
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            Document Details:
                                        </span>
                                         <span t-field="doc.document_type"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                        <span>
                                           -
                                        </span>
                                        <span t-field="doc.document_no"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                        <span>
                                            -
                                        </span>
                                         <span t-field="doc.document_date"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                    </td>
                                    <td width="30%">
                                        <br></br>
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            Transaction type:
                                        </span>
                                        <span t-field="doc.transaction_type"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                    </td>
                                </tr>
                            </table>
                            <!--                            2.Address Details-->
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <tr>
                                    <br></br>
                                    <td width="100%">
                                        <strong style="font-size: 18px;">2.Address Details</strong>
                                    </td>
                                </tr>
                            </table>
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <tr>
                                    <td width="50%">
                                        <span style="font-size: 14px; font-weight: bold;">
                                            From
                                        </span>
                                        <br></br>
                                        <br></br>
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            GSTIN:
                                        </span>
                                        <span t-field="doc.company_id.vat"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <br></br>
                                        <span t-field="doc.company_id.name"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <br></br>
                                        <br></br>
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            :: Dispatch From ::
                                        </span>
                                        <br></br>
                                        <span t-field="doc.company_id.street"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <br></br>
                                        <span t-field="doc.company_id.street2"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <br></br>
                                        <span t-field="doc.company_id.city"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <span t-field="doc.company_id.state_id"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <span>
                                            -
                                        </span>
                                        <span t-field="doc.company_id.zip"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                    </td>
                                    <td width="50%">
                                        <span style="font-size: 14px;font-weight: bold;">
                                            To
                                        </span>
                                        <br></br>
                                        <br></br>
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            GSTIN:
                                        </span>
                                        <span t-field="doc.partner_id.vat"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <br></br>
                                        <span t-field="doc.partner_id.name"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <br></br>
                                         <span t-field="doc.partner_id.state_id"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <br></br>
                                        <br></br>
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            :: Ship To ::
                                        </span>
                                        <br></br>
                                        <span t-field="doc.partner_id.street"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <br></br>
                                        <span t-field="doc.partner_id.street2"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <br></br>
                                        <span t-field="doc.partner_id.city"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <span t-field="doc.partner_id.state_id"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                        <span>
                                            -
                                        </span>
                                        <span t-field="doc.partner_id.zip"
                                              style="font-family: serif; font-size: 14px; font-weight: normal;"/>
                                    </td>
                                </tr>
                            </table>
                            <!--                            3. Goods Details-->
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <tr>
                                    <br></br>
                                    <td width="100%">
                                        <strong style="font-size: 18px;">3. Goods Details</strong>
                                    </td>
                                </tr>
                            </table>
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <thead>
                                    <br></br>
                                    <tr>
                                        <!-- Product details column -->
                                        <th name="th_hsn_code"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            HSN
                                            Code
                                        </th>
                                        <th name="th_label"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            Product Name and Desc.
                                        </th>
                                        <th name="th_quantity"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            Quantity
                                        </th>
                                        <th name="th_taxableamount"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            Taxable Amount Rs.
                                        </th>
                                        <th name="th_tax"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            Tax Rate
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="move_index" t-value="1"/>
                                    <t t-foreach="doc.invoice_line_ids" t-as="line">
                                        <tr>
                                            <td name="th_hsn_code"
                                                style="font-family: serif; font-size: 14px; font-weight: normal; text-align: left; padding: 5px; border: 1px solid #EEEEEE;">
                                                <span t-field="line.product_id.l10n_in_hsn_code"/>
                                            </td>
                                            <td name="th_label"
                                                style="font-family: serif;font-size: 14px;font-weight: normal;padding: 5px;text-align: left;">
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td name="th_quantity"
                                                style="font-family: serif; font-size: 14px; font-weight: normal; text-align: left; padding: 5px; border: 1px solid #EEEEEE;">
                                                <span t-field="line.quantity"/>
                                                <span t-field="line.product_uom_id"/>
                                            </td>
                                            <td name="th_taxableamount" class="text-end"
                                                style="font-family: serif; font-size: 14px; font-weight: normal; text-align: right; padding: 5px; border:1px solid #EEEEEE;">
                                                <span t-field="line.price_subtotal"/>
                                            </td>
                                            <td name="th_tax" class="text-end"
                                                style="font-family: serif; font-size: 14px; font-weight: normal; text-align: right; padding: 5px; border:1px solid #EEEEEE;">
                                                <span t-field="line.tax_ids"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <br></br>
                            <!--                            Totals-->
                            <table width="100%" style="border: 1px solid #EEEEEE;">
                                <thead>
                                    <tr>
                                        <th id="th_taxable_amt"
                                            style="font-size: 15px; font-weight: bold; text-align: center;">
                                            <strong>Tot. Tax'ble Amt</strong>
                                        </th>
                                        <th id="th_cgst"
                                            style="font-size: 15px; font-weight: bold; text-align: center;">
                                            CGST Amt
                                        </th>
                                        <th id="th_sgst"
                                            style="font-size: 15px; font-weight: bold; text-align: center;">
                                            SGST Amt
                                        </th>
                                        <th id="th_igst"
                                            style="font-size: 15px; font-weight: bold; text-align: center;">
                                            IGST Amt
                                        </th>
                                        <th id="th_cess"
                                            style="font-size: 15px; font-weight: bold; text-align: center;">
                                            CESS Amt
                                        </th>
                                        <th id="th_cess_non"
                                            style="font-size: 15px; font-weight: bold; text-align: center;">
                                            CESS Non.Advol Amt
                                        </th>
                                        <th id="th_other"
                                            style="font-size: 15px; font-weight: bold; text-align: center;">
                                            Other Amt
                                        </th>
                                        <th id="th_total"
                                            style="font-size: 15px; font-weight: bold; text-align: center;">
                                            Total Inv.Amt
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td id="td_taxable_amt"
                                            style="font-family: serif;font-size: 14px;font-weight: normal;text-align:right;">
                                            <span t-field="doc.amount_untaxed_vals"/>
                                        </td>
                                        <td id="td_cgst"
                                            style="font-family: serif;font-size: 14px;font-weight: normal;text-align:right;">
                                            <span t-field="doc.cgst_amount"/>
                                        </td>
                                        <td id="td_sgst"
                                            style="font-family: serif;font-size: 14px;font-weight: normal;text-align:right;">
                                            <span t-field="doc.sgst_amount"/>
                                        </td>
                                        <td id="td_igst"
                                            style="font-family: serif;font-size: 14px;font-weight: normal;text-align:right;">
                                            <span t-field="doc.igst_amount"/>
                                        </td>
                                        <td id="th_cess"
                                            style="font-family: serif;font-size: 14px;font-weight: normal;text-align:right;">
                                            <span t-field="doc.cess_amt"/>
                                        </td>
                                        <td id="th_cess_non"
                                            style="font-family: serif;font-size: 14px;font-weight: normal;text-align:right;">
                                            <span t-field="doc.cess_non"/>
                                        </td>
                                        <td id="th_other"
                                            style="font-family: serif;font-size: 14px;font-weight: normal;text-align:right;">
                                             <span t-field="doc.other_amt"/>
                                        </td>
                                        <td id="td_total"
                                            style="font-family: serif;font-size: 14px;font-weight: normal;text-align:right;">
                                            <span t-field="doc.amount_total_vals"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <!--                            Transportation Details-->
                            <br></br>
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <tr>
                                    <td width="100%">
                                        <strong style="font-size: 18px;">4. Transportation Details</strong>
                                    </td>
                                </tr>
                            </table>
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <tr>
                                    <td width="35%">
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            Transporter ID:
                                        </span>
                                        <span t-field="doc.transport_id"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                    </td>
                                    <td width="35%">
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            Transporter Doc. No:
                                        </span>
                                        <span t-field="doc.transportation_doc"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                    </td>
                                    <td width="30%">
                                        <span style="font-family: serif; font-size: 14px; font-weight: normal;">
                                            Transportation Doc Date:
                                        </span>
                                        <span t-field="doc.transportation_doc_date"
                                              style="font-family: serif; font-size: 14px; font-weight: bold;"/>
                                    </td>
                                </tr>
                            </table>
                            <!--                            Vehicle Details-->
                            <br></br>
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <tr>
                                    <td width="100%">
                                        <strong style="font-size: 18px;">5. Vehicle Details</strong>
                                    </td>
                                </tr>
                            </table>
                            <table width="100%" style="text-align: left; border: 1px solid #EEEEEE;">
                                <thead>
                                    <tr>
                                        <!-- Product details column -->
                                        <th name="th_mode"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            Mode
                                        </th>
                                        <th name="th_trans"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            Vehicle / Trans Doc No and Dt.
                                        </th>
                                        <th name="th_from"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            From
                                        </th>
                                        <th name="th_enter_date"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            Entered Date
                                        </th>
                                        <th name="th_enter_by"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            Entered By
                                        </th>
                                        <th name="th_cewb"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            CEWB No.
                                            (If any)
                                        </th>
                                        <th name="th_multi"
                                            style="font-size: 15px; font-weight: bold;text-align: center; padding: 5px; border: 1px solid #EEEEEE;">
                                            Multi Veh.Info
                                            (If any)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td name="th_mode" class="text-end"
                                            style="font-family: serif; font-size: 14px; font-weight: normal; text-align: right; padding: 5px; border:1px solid #EEEEEE;">
                                            <span t-field="doc.transport_mode"/>
                                        </td>
                                        <td name="th_trans" class="text-end"
                                            style="font-family: serif; font-size: 14px; font-weight: normal; text-align: right; padding: 5px; border:1px solid #EEEEEE;">
                                            <span t-field="doc.transport_vehicle_no"/>
                                            <span t-field="doc.transportation_doc"/>
                                            <span t-field="doc.transportation_doc_date"/>
                                        </td>
                                        <td name="th_from" class="text-end"
                                            style="font-family: serif; font-size: 14px; font-weight: normal; text-align: right; padding: 5px; border:1px solid #EEEEEE;">
                                            <span t-field="doc.company_id.city"/>
                                        </td>
                                        <td name="th_enter_date" class="text-end"
                                            style="font-family: serif; font-size: 14px; font-weight: normal; text-align: right; padding: 5px; border:1px solid #EEEEEE;">
                                            <span t-field="doc.eway_date"/>
                                        </td>
                                        <td name="th_enter_by" class="text-end"
                                            style="font-family: serif; font-size: 14px; font-weight: normal; text-align: right; padding: 5px; border:1px solid #EEEEEE;">
                                            <span t-field="doc.company_id.vat"/>
                                        </td>
                                        <td name="th_cewb" class="text-end"
                                            style="font-family: serif; font-size: 14px; font-weight: normal; text-align: right; padding: 5px; border:1px solid #EEEEEE;">
                                            <span>
                                                -
                                            </span>
                                        </td>
                                        <td name="th_multi" class="text-end"
                                            style="font-family: serif; font-size: 14px; font-weight: normal; text-align: right; padding: 5px; border:1px solid #EEEEEE;">
                                            <span>
                                                -
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table width="100%" style="text-align: center; border: 1px solid #EEEEEE;">
                                <tr>
                                    <td width="100%">
                                        <br></br>
                                         <img t-attf-src="data:image/*;base64,{{doc.barcode}}" style="height:50px;width:150px;"/><br></br>
                                         <span t-field="doc.eway_no"/>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
<!--                 </div>-->
            </t>

        </template>

        <template id="report_eway_bill_cancelled">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="eway_addons.report_nano_cancelled_ewaybill_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
    </data>
</odoo>
