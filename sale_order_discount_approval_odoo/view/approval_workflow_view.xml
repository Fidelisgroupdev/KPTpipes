<odoo>
    <record id="view_sale_order_approval_kanban" model="ir.ui.view">
        <field name="name">sale.order.approval.kanban</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="approval_state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <strong><field name="name"/></strong>
                            <div><field name="approval_state"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
