<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="survey_user_view_form_inherit" model="ir.ui.view">
        <field name="name">survey.user.view.form.inherit</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref="survey.survey_user_input_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet/group" position="after">
                <group col="2">
                    <group>
                        <field name="emp_id"/>
                        <field name="employee_id" string="Employee Name"/>
                        <field name="job_title" string="Designation"/>
                        <field name="manager_id" />
                        <field name="team_id" />
                    </group>
                    <group>
                        <field name="joining_date" />
                        <field name="email" />
                        <field name="current_ctc" />
                        <field name="department_id" />
                        <field name="survey_id"/>
                    </group>
                    </group>
            </xpath>
            <xpath expr="//field[@name='user_input_line_ids']/tree/field[@name='display_name']" position="attributes">
                <attribute name="string">Employee Response</attribute>
            </xpath>

            <xpath expr="//field[@name='user_input_line_ids']/tree/field[@name='display_name']" position="after">
                <field name="manager_response" />
                <field name="hr_response" />
            </xpath>
        </field>
    </record>
</odoo>