<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='supply_type_form_view' model='ir.ui.view'>
        <field name="name">supply.type.form.view</field>
        <field name="model">supply.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id='supply_type_tree_view' model='ir.ui.view'>
        <field name="name">supply.type.tree.view</field>
        <field name="model">supply.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id='supply_type_action' model='ir.actions.act_window'>
        <field name="name">Supply Type</field>
        <field name="res_model">supply.type</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="supply_menu"
              name="Supply Type"
              parent="purchase.menu_purchase_config"
              action="supply_type_action"
    />
</odoo>
