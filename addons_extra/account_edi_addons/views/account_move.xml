<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="account_edi_move_form_inherit" model="ir.ui.view">
        <field name="name">account.edi.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_edi.view_move_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="after">
                <button name="button_send_einvoice" type="object" class="btn-primary" string="Send E-invoice" invisible="state != 'posted'"/>
                 <button name="einvoice_button_cancel_posted_moves"
                            string="E-Invoice Cancellation"
                            type="object"
                            groups="account.group_account_invoice"
                            invisible="edi_show_cancel_button == False"/>
                    <button name="eway_button_cancel_posted_moves"
                            string="E-Way Bill Cancellation"
                            type="object"
                            groups="account.group_account_invoice"
                            invisible="edi_show_cancel_button == False"/>
            </xpath>
            <xpath expr="//button[@name='button_cancel_posted_moves']" position="attributes">
                <invisible>1</invisible>
            </xpath>
        </field>
    </record>
</odoo>
