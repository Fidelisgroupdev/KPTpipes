<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="hr_employee_view_form_inherit_team" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.team</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="department_id" position="after">
                <field name="team_id" domain="[('department_id', '=', department_id)]"/>
            </field>
            <xpath expr="//field[@name='mobile_phone']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='work_email']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='public']/div/div/group" position="before">
                <group string="Contact">
                    <field name="mobile_phone" widget="phone"/>
                    <field name="work_phone" widget="phone"/>
                    <field name="work_email" widget="email"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='work_phone']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='job_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='coach_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='mobile_phone']" position="before">
                <field name="emp_id" />
            </xpath>
            <xpath expr="//field[@name='emp_id']" position="after">
                <field name="current_ctc" />
                <field name="joining_date" />
            </xpath>
            <xpath expr="//field[@name='job_title']" position="attributes">
                 <attribute name="placeholder">Designation</attribute>
            </xpath>
            <xpath expr="//field[@name='category_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
<!--            <xpath expr="//field[@name='parent_id']" position="attributes">-->
<!--                <attribute name="domain">[('parent_id', '=', False)]</attribute>-->
<!--            </xpath>-->
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page name="employee_target" string="Target Information" >
                    <field name="target_ids">
                        <tree name="employee_target" string="Target Information" editable="bottom">
                            <field name="from_date" />
                            <field name="to_date" />
                            <field name="target" />
                            <field name="achieved" />
                            <field name="outstanding" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>