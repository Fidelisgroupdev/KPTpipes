<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Form View-->
        <record id="hr_team_view_form" model="ir.ui.view">
        <field name="name">hr.team.form</field>
        <field name="model">hr.team</field>
        <field name="arch" type="xml">
            <form string="Teams">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" string="Team Name"/>
                        <h1>
                            <field class="text-break" name="name" placeholder="e.g. Sales"/>
                        </h1>
                        <div name="options_active" class="o_row"/>
                    </div>
                    <group>
                        <group name="left" string="Team Details">
                            <field name="active" invisible="1"/>
                            <field name="sequence" invisible="1"/>
                            <field name="employee_id" widget="many2one_avatar_user" />
                            <field name="department_id" />
<!--                            <field name="company_id" options="{'no_create': True}" />-->
                        </group>
                        <group name="right">
                        </group>
                    </group>
                    <notebook>
                        <page string="Members" name="members_users">
                            <field name="member_ids" class="w-100">
                                <tree string="Members" editable="top">
                                    <field name="employee_id" string="Employee Name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" help="Follow this temas to automatically track the events associated to users of this team."/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
        <!-- Tree View-->
        <record id="hr_team_view_tree" model="ir.ui.view">
            <field name="name">hr.team.tree</field>
            <field name="model">hr.team</field>
            <field name="arch" type="xml">
                <tree string="Teams" sample="1" multi_edit="1">
                    <field name="sequence" widget="handle"/>
                    <field name="name" readonly="1"/>
                    <field name="active" column_invisible="True"/>
                    <field name="user_id"  widget="many2one_avatar_user"/>
                    <field name="department_id" />
                </tree>
            </field>
        </record>

       <!-- Action -->
        <record id="hr_team_action_config" model="ir.actions.act_window">
            <field name="name">Teams</field>
            <field name="res_model">hr.team</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Team
                </p><p>
                    Use Teams to organize your departments and draw up reports.
                </p>
            </field>
        </record>

    <!-- MENUS -->
    <menuitem
                id="menu_hr_team"
                action="hr_team_action_config"
                parent="hr.menu_hr_root"
                groups="hr.group_hr_user"/>


</odoo>

