<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_supplier_type_form_view">
        <field name="name">Supplier Type Form</field>
        <field name="model">supplier.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <record id='supply_type_tree_view' model='ir.ui.view'>
        <field name="name">supply.type.tree.view</field>
        <field name="model">supplier.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>


    <record id='supply_type_action' model='ir.actions.act_window'>
        <field name="name">Supply Type</field>
        <field name="res_model">supplier.type</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="supplier_type_config"
              name="Supplier Type"
              parent="purchase.menu_purchase_config"
              action="supply_type_action"
              sequence="11"/>

</odoo>
