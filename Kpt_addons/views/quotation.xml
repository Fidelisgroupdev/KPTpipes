<odoo>
    <!-- Inherit the existing Sales Quotation report template -->
    <template id="hide_discount_column_proforma_invoice" inherit_id="sale.report_saleorder_document">
        <!-- Try alternative XPath to hide the header containing 'Discount' -->
        <xpath expr="//th[contains(., 'Discount') or contains(., 'Disc.')]" position="replace"/>

        <!-- Try to hide the discount field in each line item -->
        <xpath expr="//td[span[@t-field='line.discount']]" position="replace"/>
    </template>
</odoo>
